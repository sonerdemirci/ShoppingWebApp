@model List<ProductModel>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<h2>Ürün Listesi</h2>

<a asp-controller="Product" asp-action="Create" class="btn btn-primary mb-3">Yeni Ürün Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ürün Adı</th>
            <th>Fiyatı</th>
            <th>Kategori</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Category.CategoryName</td>
                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductID" class="btn btn-info btn-sm">Detay</a>
                    <form asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductID" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
