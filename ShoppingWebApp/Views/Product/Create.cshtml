@model ShoppingWebApp.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Yeni Ürün";
}

<h2>Create Product</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryID" class="control-label"></label>
        <select asp-for="CategoryID" class="form-control" asp-items="Model.Categories">
            <option value="">Lütfen bir kategori seçin</option>
        </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Oluştur</button>
        <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
    </div>
</form>
